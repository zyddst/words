.history-list {
  width: 90%;
}

.history-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.word {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  display: block;
}

.date {
  font-size: 24rpx;
  color: #999;
  display: block;
} 