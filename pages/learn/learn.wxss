.learn-card {
  width: 90%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 40rpx;
  text-align: center;
}

.word {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.phonetic {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

button {
  margin: 10rpx 0;
  border-radius: 10rpx;
}

.btn-next {
  background: #1296db;
  color: white;
}

.btn-known {
  background: #67C23A;
  color: white;
}

.btn-unknown {
  background: #F56C6C;
  color: white;
} 