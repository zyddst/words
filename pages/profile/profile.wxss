.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.stats {
  width: 90%;
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.stat-item {
  text-align: center;
}

.number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
  display: block;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
} 